            <Grid Grid.Row="3" Background="#333" MinHeight="100">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="25, 0" Orientation="Vertical">
                    <TextBlock Opacity=".4" FontSize="20" Foreground="#DDD">Current</TextBlock>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Name="txtBlockCurrentPrice" Foreground="White" VerticalAlignment="Center" FontSize="40" Text="" />
                        <TextBlock Foreground="White" FontSize="45" VerticalAlignment="Center" Margin="8, 6">$</TextBlock>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="25, 0" Orientation="Vertical">
                    <TextBlock Opacity=".4" FontSize="20" Foreground="#DDD">Best (365 days)</TextBlock>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Name="txtBlockBestPrice365" Foreground="White" VerticalAlignment="Center" FontSize="40" Text="" />
                        <TextBlock Foreground="White" FontSize="45" VerticalAlignment="Center" Margin="8, 6">$</TextBlock>
                    </StackPanel>
                </StackPanel>
            </Grid>
            <TextBlock Grid.Row="4" Name="txtBlockCurrentUrl" HorizontalAlignment="Center" Foreground="White" FontSize="12" Margin="0,5,0,0" Text="" MouseUp="TxtBlockCurrentUrl_OnMouseUp" Cursor="Hand" />
        </Grid>
    </Grid>
</UserControl>
