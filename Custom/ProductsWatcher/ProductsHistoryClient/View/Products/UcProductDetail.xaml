            <Grid Grid.Row="3" Background="#333" MinHeight="100">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="25, 0" Orientation="Vertical">
                    <TextBlock Opacity=".4" FontSize="20" Foreground="#DDD">Current</TextBlock>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Name="txtBlockCurrentPrice" Foreground="White" FontSize="40" Text="20.45" />
                        <TextBlock Foreground="White" FontSize="18" VerticalAlignment="Bottom" Margin="8, 6">$</TextBlock>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="25, 0" Orientation="Vertical">
                    <TextBlock Opacity=".4" FontSize="20" Foreground="#DDD">Best (365 days)</TextBlock>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Name="txtBlockBestPrice365" Foreground="White" FontSize="40" Text="20.45" />
