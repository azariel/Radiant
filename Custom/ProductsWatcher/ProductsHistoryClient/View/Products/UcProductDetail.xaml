            <wpf:CartesianChart Name="ProductHistoryChart" Grid.Row="2" Margin="10, 0, 10, 20" Hoverable="True" DataTooltip="{x:Null}" LegendLocation="Bottom" MinHeight="350" DisableAnimations="True">
