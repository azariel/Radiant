<UserControl x:Class="ProductsHistoryClient.View.Products.UcProductPriceCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProductsHistoryClient.View.Products"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Name="mainGrid">
        <StackPanel Orientation="Vertical">
            <TextBlock Name="txtBlockPrice" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding ProductViewModel.CurrentPrice, StringFormat={}{0:#,#.00} $, RelativeSource={RelativeSource AncestorType=local:UcProductPriceCell}}" />
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Name="txtBlockDifferenceQuote" />
                <TextBlock Name="txtBlockDifference" FontWeight="DemiBold" Text="{Binding ProductViewModel.DifferenceBestPrice1YVsCurrentPrice , StringFormat={}{0:#,#.00} %, RelativeSource={RelativeSource AncestorType=local:UcProductPriceCell}}"></TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
