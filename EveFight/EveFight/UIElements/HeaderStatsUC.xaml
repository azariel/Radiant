<UserControl x:Class="EveFight.UIElements.HeaderStatsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EveFight.UIElements"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="200">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <Label Name="LblDPSTank" Foreground="White" FontWeight="Bold" FontSize="10" />
            <Label Name="lblDPSConst" Foreground="White" FontWeight="Bold" FontSize="10" Margin="-5,0,0,0">dps</Label>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Label Name="LblUserDPSTank" Foreground="DarkCyan" FontWeight="Bold" FontSize="10" />
            <Label Name="lblUserDPSConst" Foreground="White" FontWeight="Bold" FontSize="10" Margin="-5,0,0,0">dps</Label>
        </StackPanel>
    </Grid>
</UserControl>
